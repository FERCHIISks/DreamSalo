<script>
const API = 'https://api.smartthings.com/v1';
let TK='', DID='', vol=0, pwr=true, play=false, nb='', nt=null, pt=null;

const $=id=>document.getElementById(id);
function show(id){$(id).style.display='block'}
function hide(id){$(id).style.display='none'}
function toast(m){const t=$('toast');t.textContent=m;t.classList.add('show');clearTimeout(t._);t._=setTimeout(()=>t.classList.remove('show'),2200)}
function log(m,c='inf'){const e=$('LB');e.innerHTML+=`<br><span class="${c}">‚ñ∏ ${m}</span>`;e.scrollTop=e.scrollHeight}

async function api(path,method='GET',body=null){
  const r=await fetch(API+path,{method,headers:{'Authorization':'Bearer '+TK,'Content-Type':'application/json'},body:body?JSON.stringify(body):null});
  const t=await r.text();
  if(!r.ok)throw new Error(r.status+': '+t.slice(0,80));
  return t?JSON.parse(t):{};
}

async function connect(){
  TK=$('TK').value.trim();
  if(!TK){$('EM').textContent='Ingresa tu token.';$('EM').classList.add('show');return}
  $('EM').classList.remove('show');
  $('CB').disabled=true;$('CT').textContent='Buscando‚Ä¶';$('CS').style.display='block';
  try{
    let items=[];
    try{const d=await api('/devices?capability=samsungvd.remoteControlV2');items=d.items||[];}catch(e){}
    if(!items.length){
      const d=await api('/devices');
      items=(d.items||[]).filter(v=>(v.label||v.name||'').toLowerCase().match(/tv|samsung/));
      if(!items.length){const d2=await api('/devices');items=d2.items||[];}
    }
    if(!items.length){$('EM').textContent='No se encontraron TVs en tu cuenta.';$('EM').classList.add('show');}
    else renderDevices(items);
  }catch(e){
    $('EM').textContent='Error: '+e.message+'\n\nRevisa tu token y tu conexi√≥n a internet.';
    $('EM').classList.add('show');
  }
  $('CB').disabled=false;$('CT').textContent='Conectar';$('CS').style.display='none';
}

function renderDevices(list){
  hide('setupScreen');
  const el=$('DL');el.innerHTML='';
  list.forEach(d=>{
    const div=document.createElement('div');div.className='dev-item';
    div.innerHTML=`<div style="font-size:26px">üì∫</div><div><div class="dev-name">${d.label||d.name||'Dispositivo'}</div><div class="dev-id">${(d.deviceId||'').slice(0,22)}‚Ä¶</div></div>`;
    div.addEventListener('click',()=>selectDevice(d));
    el.appendChild(div);
  });
  show('deviceScreen');
}

async function selectDevice(d){
  DID=d.deviceId;$('TN').textContent=d.label||d.name;
  hide('deviceScreen');show('remoteScreen');
  await refresh();
  pt=setInterval(refresh,15000);
}

async function refresh(){
  try{
    const d=await api('/devices/'+DID+'/status');
    const m=(d.components||{}).main||{};
    const sw=m.switch?.switch?.value||'?';
    const v=m.audioVolume?.volume?.value;
    const inp=m['samsungvd.mediaInputSource']?.inputSource?.value||m.mediaInputSource?.inputSource?.value||'';
    pwr=(sw==='on');
    $('SD').style.cssText='background:'+(pwr?'#00e57a':'#ff3b5c')+';box-shadow:0 0 8px '+(pwr?'#00e57a':'#ff3b5c');
    $('ST').textContent=pwr?'TV Encendida':'TV Apagada';
    $('SI').textContent=inp||(pwr?'En l√≠nea':'‚Äî');
    if(v!=null){vol=v;$('VV').textContent=v;$('VF').style.width=v+'%'}
    log('Vol:'+v+' '+sw,'ok');
  }catch(e){log('Error: '+e.message.slice(0,40),'er')}
}

async function C(cap,cmd,btn,args=[]){
  if(btn)btn.classList.add('busy');
  try{await api('/devices/'+DID+'/commands','POST',{commands:[{component:'main',capability:cap,command:cmd,arguments:args}]});toast('‚ñ∏ '+cmd);log(cmd,'ok');setTimeout(refresh,1200);}
  catch(e){toast('‚ö† Error');log('Err:'+e.message.slice(0,40),'er')}
  if(btn)btn.classList.remove('busy');
}

async function K(k,btn){
  if(btn)btn.classList.add('busy');
  try{await api('/devices/'+DID+'/commands','POST',{commands:[{component:'main',capability:'samsungvd.remoteControlV2',command:'sendKey',arguments:[k]}]});toast('‚ñ∏ '+k);log(k,'ok');}
  catch(e){
    if(k==='KEY_PLAY')await C('mediaPlayback','play',null);
    else if(k==='KEY_PAUSE')await C('mediaPlayback','pause',null);
    else{toast('‚ö† '+k.replace('KEY_',''));log('Err '+k,'er')}
  }
  if(btn)btn.classList.remove('busy');
}

async function setVol(d,btn){
  const nv=Math.max(0,Math.min(100,vol+d));
  if(btn)btn.classList.add('busy');
  try{await api('/devices/'+DID+'/commands','POST',{commands:[{component:'main',capability:'audioVolume',command:'setVolume',arguments:[nv]}]});vol=nv;$('VV').textContent=nv;$('VF').style.width=nv+'%';toast((d>0?'üîä':'üîâ')+' Vol:'+nv);}
  catch(e){toast('‚ö† Error vol')}
  if(btn)btn.classList.remove('busy');
}

async function A(appId,btn){
  if(btn)btn.classList.add('busy');
  try{await api('/devices/'+DID+'/commands','POST',{commands:[{component:'main',capability:'samsungvd.mediaApp',command:'launchApp',arguments:[{appId}]}]});toast('‚ñ∏ Abriendo‚Ä¶');}
  catch(e){toast('‚ö† Error app')}
  if(btn)btn.classList.remove('busy');
}

function togglePwr(btn){C('switch',pwr?'off':'on',btn)}
function togglePlay(btn){play=!play;btn.textContent=play?'‚è∏':'‚ñ∂';K(play?'KEY_PLAY':'KEY_PAUSE',null)}

function N(n,btn){
  clearTimeout(nt);nb+=n;toast('üì∫ Canal: '+nb);
  nt=setTimeout(async()=>{const ch=nb;nb='';for(const d of ch){await K('KEY_'+d,null);await new Promise(r=>setTimeout(r,180))}log('CH‚Üí'+ch,'ok')},1600);
}

function goBack(){clearInterval(pt);hide('remoteScreen');show('deviceScreen')}

